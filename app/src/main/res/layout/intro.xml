<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#000000"
    tools:context=".Intro"
    >

    <!-- Primary layout holding all other secondary layouts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="#000000">

        <!-- Contents of the 1st layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:background="#000000"
            android:gravity="start"
            android:layout_gravity="left">

            <!-- Application Logo -->
            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-45dp"
                android:contentDescription="Application Logo"
                app:srcCompat="@drawable/app_logo" />
        </LinearLayout>

        <!-- Contents of the 2nd layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="#000000"
            android:gravity="center_horizontal"
            >
            <!-- Application Slogan -->
            <TextView
                android:id="@+id/appSlogan"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:text="Stay at the pinnacle of productivity effortlessly"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_marginLeft="22dp"/>
        </LinearLayout>


        <!-- Contents of the 3rd layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_gravity="top"
            android:background="#000000">

            <!-- Application Visual Asset -->
            <ImageView
                android:id="@+id/quickInfo"
                android:layout_width="410dp"
                android:layout_height="265dp"
                android:contentDescription="Application Information"
                app:srcCompat="@drawable/intro_info_asset" />
        </LinearLayout>

        <!-- Contents of the 4th layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Button centering in screen -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:text="Continue with email"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/btn_continue_email"
                android:background="@drawable/rounded_button"
                android:textSize="16sp"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Contents of the 5th layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#000000"
            android:layout_gravity="bottom">

            <!-- Item Divider -->
            <ImageView
                android:id="@+id/itemDivider"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:scaleType="fitCenter"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/item_seperator" />
        </LinearLayout>

        <!-- Contents of the 6th layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#000000"
            android:gravity="center_horizontal"
            >

            <!-- Informative Text -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:text="Continue using one of these platforms"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>

        <!-- Contents of the 7th layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentBottom= "true"
            >


            <!-- Log in using Apple Account Button -->
            <ImageButton
                android:id="@+id/btn_apple"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_apple"
                android:contentDescription="Apple Option"/>

            <!-- Log in using Google Account Button -->
            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_google"
                android:contentDescription="Google Option"/>

            <!-- Log in using SSO Account Button -->
            <ImageButton
                android:id="@+id/btn_sso"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_sso"
                android:contentDescription="SSO Option "/>

        </LinearLayout>

        <!-- Contents of the 8th layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:backgroundTint="@color/black">

            <!-- Filling out screen -->
            <View
                android:id="@+id/screenFiller"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="#000000" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>