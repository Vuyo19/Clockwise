<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Intro"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000000"
            android:gravity="start"
            android:layout_gravity="top">

            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:contentDescription="Application Logo"
                app:srcCompat="@drawable/app_logo_slogan" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_gravity="top"
            android:background="#000000">

            <!-- Contents of the first layout -->

            <ImageView
                android:id="@+id/quickInfo"
                android:layout_width="410dp"
                android:layout_height="265dp"
                android:contentDescription="Application Information"
                app:srcCompat="@drawable/intro_info_asset" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Contents of the second layout -->

            <!-- Button centering in screen -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:text="Continue with email"
                android:textColor="@color/white"
                android:id="@+id/btn_continue_email"
                android:background="@drawable/rounded_button"
                android:textSize="16sp"
                android:textAllCaps="false" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#000000"
            android:layout_gravity="bottom">

            <!-- Contents of the third layout -->

            <ImageView
                android:id="@+id/itemDivider"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:scaleType="fitCenter"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/item_seperator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="#000000"
            android:gravity="center_horizontal"
            >

            <!-- Contents of the fourth layout -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:text="Continue using one of these platforms"
                android:textColor="#FFFFFF"
                android:gravity="center" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentBottom= "true"
            >



            <ImageButton
                android:id="@+id/btn_apple"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_apple"/>

            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_google" />

            <ImageButton
                android:id="@+id/btn_sso"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_sso"/>


            <!-- Contents of the fifth  layout -->

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>