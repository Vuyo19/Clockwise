<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_view_back_img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/parentLayoutTask"
        >

        <!-- Select Date Range Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Btn_selectDate"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="Select Date Range"
            android:fontFamily="@font/basementgrotesque"
            android:textColor="@color/white"
            android:background="@drawable/alt_button_3"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:drawableRight="@drawable/baseline_calendar_today_24"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>