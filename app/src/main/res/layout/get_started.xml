<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000000"
    tools:context=".GetStarted">

    <!-- Primary layout holding all other secondary layouts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Contents of the 1st layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="565dp"
            android:background="#000000"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- Application Visual Asset -->
            <ImageView
                android:id="@+id/quickInfo"
                android:layout_width="410dp"
                android:layout_height="465dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="50dp"
                android:contentDescription="Application Information"
                app:srcCompat="@drawable/get_started_image_asset" />
        </LinearLayout>

        <!-- Contents of the 2nd layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#000000"
            android:gravity="center"
            >

            <!-- Informative Text -->
            <TextView
                android:id="@+id/text_info"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:text="Effortless productivity made easy: Streamline your tasks with our convenient time manager."
                android:textColor="#f6dace"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Button centering in screen -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_get_started"
                android:layout_width="300dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"
                android:text="Get started"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:drawableRight="@drawable/baseline_arrow_forward_24"
                android:paddingStart="88dp"
                android:paddingEnd="86dp"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>