<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Graph_TotalHours"
    android:background="@drawable/totalhors_backimg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/Heading_Content"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp">

            <!-- Page Heading -->
            <TextView
                android:id="@+id/graphTitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="TOTAL HOURS GRAPH"
                android:fontFamily="@font/basementgrotesque"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"/>

            <!-- Page Description -->
            <TextView
                android:id="@+id/text_desc"
                android:layout_height="wrap_content"
                android:layout_width="230dp"
                android:text="Report"
                android:fontFamily="@font/basementgrotesque"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <!-- Return Back to previous page Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Btn_back_totalHrsGraph"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back"
                android:contentDescription="Back Button"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/alt_back_button"
                android:drawableStart="@drawable/baseline_arrow_back_24"
                android:paddingStart="18dp"
                android:layout_marginStart="15dp" />

            <!-- Select Date Range Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Btn_selectRangeGraph"
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/alt_button_3"
                android:drawableRight="@drawable/baseline_calendar_today_24"
                android:fontFamily="@font/basementgrotesque"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Select Date Range"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_below="@+id/Heading_Content"
            >

            <!--Adding GraphView-->
            <com.jjoe64.graphview.GraphView
                android:id="@+id/Graph_TotalHrs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>