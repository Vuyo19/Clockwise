<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/PlainTxt_maxHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/Btn_saveHrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="395dp" />

    <TextView
        android:id="@+id/txt_enterMaxHrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your maximum work hours:"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="168dp" />

    <TextView
        android:id="@+id/txt_enterMinHrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter you minimun work hours:"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="265dp" />

    <EditText
        android:id="@+id/PlainTxt_minHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="291dp" />

    <Button
        android:id="@+id/Btn_back"
        android:layout_width="85dp"
        android:layout_height="42dp"
        android:text="BACK"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="14dp" />
</androidx.constraintlayout.widget.ConstraintLayout>