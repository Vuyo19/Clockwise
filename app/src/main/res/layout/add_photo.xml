<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/add_photo_back_img"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- Return Back to previous page Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Btn_back"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back"
            android:contentDescription="Back Button"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/alt_back_button"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:paddingStart="18dp"
            android:layout_marginStart="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <!-- Button to add phone -->
        <ImageButton
            android:id="@+id/btnAddPhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/upload_photo_icon"
            android:scaleType="fitCenter"
            android:contentDescription="Add New Category Button"/>

        <TextView
            android:id="@+id/text_register"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Upload Photo"
            android:fontFamily="@font/basementgrotesque"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>

        <!-- Other views and elements -->

    </LinearLayout>


</LinearLayout>
