<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayTask">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/back_drop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:background="@drawable/home_page_back_drop">

        <LinearLayout
            android:id="@+id/top_items"
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <!-- Task -->
            <TextView
                android:id="@+id/text_register"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Dashboard"
                android:fontFamily="@font/basementgrotesque"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white" />


        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">



                <!-- Create Task Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_create_task"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/purple_button"
                    android:text="Create Task"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:drawableBottom="@drawable/baseline_create_task"
                    android:drawablePadding="-20dp"
                    android:paddingBottom="20dp" />



                <!-- Total Hours Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_tasks"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/purple_button"
                    android:text="My Tasks"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:drawableBottom="@drawable/baseline_my_tasks"
                    android:drawablePadding="-20dp"
                    android:paddingBottom="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_set_goal"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="30dp"

                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/purple_button"
                    android:text="SET GOAL"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:drawableBottom="@drawable/baseline_set_goal"
                    android:drawablePadding="-20dp"
                    android:paddingBottom="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_total_hours"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/purple_button"
                    android:text="Total Hours"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:drawableBottom="@drawable/baseline_summarize_24"
                    android:drawablePadding="-20dp"
                    android:paddingBottom="20dp"/>

            </LinearLayout>


    </LinearLayout>

</FrameLayout>